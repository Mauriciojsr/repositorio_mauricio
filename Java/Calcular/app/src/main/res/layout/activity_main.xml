<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvOpcao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selecione a operação matematica"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Spinner
        android:id="@+id/spiOpcoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvOpcao" />

    <TextView
        android:id="@+id/tvOperacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:hint="Tipo de operação"
        app:layout_constraintBottom_toBottomOf="@+id/edtNumero1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spiOpcoes" />

    <EditText
        android:id="@+id/edtNumero1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:textAlignment="center"
        android:ems="10"
        android:inputType="number"
        android:hint="Digite um numero"
        app:layout_constraintStart_toEndOf="@+id/tvOperacao"
        app:layout_constraintTop_toBottomOf="@+id/spiOpcoes" />

    <ImageView
        android:id="@+id/imgOperacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/edtNumero1"
        app:layout_constraintStart_toStartOf="@+id/edtNumero1"
        app:layout_constraintTop_toBottomOf="@+id/edtNumero1"
        app:srcCompat="@drawable/soma" />

    <EditText
        android:id="@+id/edtNumero2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Digite um numero"
        android:textAlignment="center"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@id/edtNumero1"
        app:layout_constraintStart_toStartOf="@+id/edtNumero1"
        app:layout_constraintTop_toBottomOf="@+id/imgOperacao"
        />

    <ImageView
        android:id="@+id/imgIgual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/edtNumero2"
        app:layout_constraintStart_toStartOf="@+id/edtNumero2"
        app:layout_constraintTop_toBottomOf="@+id/edtNumero2"
        app:srcCompat="@drawable/igual"/>

    <TextView
        android:id="@+id/tvResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:hint="Resultado da operação matemática"
        app:layout_constraintEnd_toEndOf="@+id/btnCalcular"
        app:layout_constraintStart_toStartOf="@+id/btnCalcular"
        app:layout_constraintTop_toBottomOf="@+id/btnCalcular" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:text="Calcular"
        app:layout_constraintEnd_toEndOf="@+id/edtNumero2"
        app:layout_constraintStart_toStartOf="@+id/edtNumero2"
        app:layout_constraintTop_toBottomOf="@+id/edtNumero2" />


</androidx.constraintlayout.widget.ConstraintLayout>